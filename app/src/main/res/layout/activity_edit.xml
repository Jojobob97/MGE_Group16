<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:padding="8dp"
    tools:context=".activities.EditActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHoriz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="80dp" />

    <TextView
        android:id="@+id/editTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_title_text"
        app:layout_constraintTop_toTopOf="@id/guidelineHoriz"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/editTitleInput"
        android:inputType="text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/guidelineVert"
        app:layout_constraintTop_toTopOf="@id/guidelineHoriz" />

    <TextView
        android:id="@+id/editTargetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_target_text"
        app:layout_constraintTop_toBottomOf="@id/editTitleText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/editTargetInput"
        android:inputType="text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/guidelineVert"
        app:layout_constraintTop_toBottomOf="@id/editTargetInput"/>




</androidx.constraintlayout.widget.ConstraintLayout>