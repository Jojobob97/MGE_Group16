<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.DetailEffortFragment">

    <TextView
        android:id="@+id/detail_effort_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailTitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/detail_effort_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailEffortText"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/detail_effort_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/detail_effort_actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailEffortText"
        app:layout_constraintTop_toBottomOf="@id/detail_effort_target"
        app:layout_constraintLeft_toLeftOf="@id/detail_effort_target"
        app:layout_constraintRight_toRightOf="@id/detail_effort_target" />

</androidx.constraintlayout.widget.ConstraintLayout>